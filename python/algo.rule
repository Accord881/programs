SETTINGS
  card_num = 3
  players = 4
  class card :
    num = 0
    col = ""
    open = False
  :
END

DRAW
  type = card
  from = stock
  num = 1
  sendW
RETURN

INITIALIZE
  global card_num
  for i in range(card_num) :
    DRAW
  :
RETURN

ATTACK
  type = card
  success = open target
  fail = open owner
  while True :
    where = target
    sendW
    if 'false' == recv['result'] : break
  :
RETURN

START
  INITIALIZE
  while  msg['_p'] != 'end' :
    DRAW
    ATTACK
    sendA
  :
END